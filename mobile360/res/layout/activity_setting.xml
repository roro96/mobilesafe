<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv"
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.example.mobile360.view.SettingItemView
        xmlns:mobile360="http://schemas.android.com/apk/res/com.example.mobile360"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        mobile360:desoff="自动更新已关闭"
        mobile360:deson="自动更新已开启"
        mobile360:destitle="自动更新设置" >
    </com.example.mobile360.view.SettingItemView>

    <com.example.mobile360.view.SettingItemView
        xmlns:mobile360="http://schemas.android.com/apk/res/com.example.mobile360"
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        mobile360:desoff="归属地显示已关闭"
        mobile360:deson="归属地显示已开启"
        mobile360:destitle="电话归属地显示设置" >
    </com.example.mobile360.view.SettingItemView>

    <com.example.mobile360.view.SettingClickView
        android:id="@+id/scv_toast_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >
    </com.example.mobile360.view.SettingClickView>

    <com.example.mobile360.view.SettingClickView
        android:id="@+id/scv_toast_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >
    </com.example.mobile360.view.SettingClickView>

    <com.example.mobile360.view.SettingItemView
        xmlns:mobile360="http://schemas.android.com/apk/res/com.example.mobile360"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        mobile360:desoff="黑名单拦截已关闭"
        mobile360:deson="黑名单拦截已开启"
        mobile360:destitle="黑名单拦截设置" >
    </com.example.mobile360.view.SettingItemView>

    <com.example.mobile360.view.SettingItemView
        xmlns:mobile360="http://schemas.android.com/apk/res/com.example.mobile360"
        android:id="@+id/siv_app_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        mobile360:desoff="程序锁已关闭"
        mobile360:deson="程序锁已开启"
        mobile360:destitle="程序锁设置" >
    </com.example.mobile360.view.SettingItemView>

</LinearLayout>